n=a=0
abc = -1
while n<1:
    n = int(input("Ingrese el valor de N: "))
while a<0.5 or a>2:
    a=float(input("Ingrese a: "))
resultado = 0
for i in range(1,n+1):
    num = 2*i - 1
    expo = a**(2**(i-1))
    abc*=-1
    resultado += round(abc*num*expo/(2*i),2)
print("La respuesta de la serie es: ", resultado)
