#include "util.h"
#include <iostream>
using namespace std;
#ifdef MAIN3
int a_global = 1;
void escribir(int a) {
	int a_local = 3;
	cout << "El valor de la variable que pasamos es = " << a << endl;
	cout << "El valor de la variable local es = " << a_local << endl;
	cout << "El valor de la variable Global es = " << a_global << endl;
}
int main() {
	int a_local = 2;
	escribir(a_local);
	return 0;
}
#endif
