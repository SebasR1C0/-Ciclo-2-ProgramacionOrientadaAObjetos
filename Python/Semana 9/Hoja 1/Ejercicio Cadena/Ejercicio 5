producto =input("Ingrese el nombre del producto: ")
precio =input("Ingrese el precio del producto: ")
unidades =int(input("Ingrese las unidades del producto: "))
print("La cadena es: ")
print(producto, end="-")
d = round((float(precio)*100)//100)
u = round((float(precio)*100)%100)
for i in range(1,7-len(str(d)),1):
   print(0, end="")
print(str(d)+"."+str(u),end="-")
for i in range(1,7-len(str(unidades)),1):
   print(0, end="")
print(str(unidades))
print("\t")
